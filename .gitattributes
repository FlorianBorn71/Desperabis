# Binary git LFS files
*.zip filter=lfs diff=lfs merge=lfs -text
*.exe filter=lfs diff=lfs merge=lfs -text
*.an2 filter=lfs diff=lfs merge=lfs -text
*.256 filter=lfs diff=lfs merge=lfs -text
*.pal filter=lfs diff=lfs merge=lfs -text
*.koo filter=lfs diff=lfs merge=lfs -text
*.dat filter=lfs diff=lfs merge=lfs -text
*.inf filter=lfs diff=lfs merge=lfs -text
*.3da filter=lfs diff=lfs merge=lfs -text
*.000 filter=lfs diff=lfs merge=lfs -text
*.wav filter=lfs diff=lfs merge=lfs -text
*.smp filter=lfs diff=lfs merge=lfs -text
*.prb filter=lfs diff=lfs merge=lfs -text
*.spl filter=lfs diff=lfs merge=lfs -text

# Image formats
*.bmp filter=lfs diff=lfs merge=lfs -text
*.tga filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
*.jpeg filter=lfs diff=lfs merge=lfs -text
*.dds filter=lfs diff=lfs merge=lfs -text
*.gif filter=lfs diff=lfs merge=lfs -text

# Other binary formats
*.xlsx filter=lfs diff=lfs merge=lfs -text

# Game-related text assets must be in ANSI, not UTF-8
Data/*.txt encoding=iso-8859-1
